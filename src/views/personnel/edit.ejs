<%- include('../layouts/main.ejs') %>

<h1>Modifier le Personnel</h1>

<form action="/personnel/update/<%= personnel._id %>" method="POST">
    <div>
        <label for="name">Nom:</label>
        <input type="text" id="name" name="name" value="<%= personnel.name %>" required>
    </div>
    <div>
        <label for="position">Poste:</label>
        <input type="text" id="position" name="position" value="<%= personnel.position %>" required>
    </div>
    <div>
        <label for="department">Département:</label>
        <input type="text" id="department" name="department" value="<%= personnel.department %>" required>
    </div>
    <button type="submit">Mettre à jour</button>
</form>

<a href="/personnel/list">Retour à la liste</a>